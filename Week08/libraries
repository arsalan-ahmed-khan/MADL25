import 'dart:io';
import 'package:flutter/material.dart';
import 'package:path_provider/path_provider.dart';
import 'package:fluttertoast/fluttertoast.dart';

void main() {
  runApp(FileDemoApp());
}

class FileDemoApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Libraries & File Demo',
      theme: ThemeData(primarySwatch: Colors.blue),
      home: FileScreen(),
    );
  }
}

class FileScreen extends StatefulWidget {
  @override
  _FileScreenState createState() => _FileScreenState();
}

class _FileScreenState extends State<FileScreen> {
  TextEditingController _controller = TextEditingController();
  String fileContent = "";

  // Get app documents directory
  Future<String> get _localPath async {
    final directory = await getApplicationDocumentsDirectory();
    return directory.path;
  }

  // Get file reference
  Future<File> get _localFile async {
    final path = await _localPath;
    return File('$path/demo.txt');
  }

  // Write content to file
  Future<void> writeToFile(String text) async {
    final file = await _localFile;
    await file.writeAsString(text);
    Fluttertoast.showToast(msg: "File saved successfully!");
  }

  // Read content from file
  Future<void> readFromFile() async {
    try {
      final file = await _localFile;
      String contents = await file.readAsString();
      setState(() {
        fileContent = contents;
      });
      Fluttertoast.showToast(msg: "File read successfully!");
    } catch (e) {
      Fluttertoast.showToast(msg: "Error reading file");
    }
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: Text('Libraries & File Demo')),
      body: Padding(
        padding: const EdgeInsets.all(16.0),
        child: Column(
          children: [
            TextField(
              controller: _controller,
              decoration: InputDecoration(
                  labelText: 'Enter text', border: OutlineInputBorder()),
            ),
            SizedBox(height: 16),
            Row(
              mainAxisAlignment: MainAxisAlignment.spaceAround,
              children: [
                ElevatedButton(
                  onPressed: () => writeToFile(_controller.text),
                  child: Text('Write to File'),
                ),
                ElevatedButton(
                  onPressed: readFromFile,
                  child: Text('Read from File'),
                ),
              ],
            ),
            SizedBox(height: 20),
            Text(
              'File Content:\n$fileContent',
              style: TextStyle(fontSize: 16),
            ),
          ],
        ),
      ),
    );
  }
}
